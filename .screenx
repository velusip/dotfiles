# just load screen with this screen config from cli and attach X from within screen
# don't reload screenrc, instead:  Ctrl-a:source .screenrc

startup_message off
defslowpaste 5
defmonitor 1
term screen-256color
screen -t startx startx
screen -t cmus cmus
screen -t irssi irssi
screen -t bash
select 0
#bindkey -k k0 select 0

altscreen off
caption always '%w'
